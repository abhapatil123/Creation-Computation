let motion = false;
let ios = false;
let circleX, circleY;
let circleSize = 80; // Diameter of the circle
let velocityX = 0;
let accelerationX = 0.1; // Acceleration due to gravity
let friction = 0.99; // Friction to simulate rolling

function setup() {
  createCanvas(windowWidth, windowHeight);
  circleX = width / 2;
  circleY = height / 2;
  background(255);
}

function draw() {
  fill(0, 50); // Set the circle fill color with lower opacity

  // Update the circle's position and velocity based on gravity and friction
  velocityX += accelerationX;
  circleX += velocityX;
  velocityX *= friction;

  // Constrain the circle's position within the canvas boundaries
  circleX = constrain(circleX, 0, width-40);
  circleY = constrain(circleY, 0, height-40);

  background(255, 10); // Set the background with low opacity to create a fading effect
  circle(circleX, circleY, circleSize);
}
